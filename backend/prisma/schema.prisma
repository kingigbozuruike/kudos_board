generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id Int @id @default(autoincrement())
  title String
  image String
  category String
  author String?
  createdAt DateTime @default(now())
  card Card[]
  @@index([title])
}

model Card {
  id Int @id @default(autoincrement())
  title String
  description String
  gifUrl String
  board Board @relation(fields: [boardId], references: [id])
  boardId Int
  upvote Int @default(0)
}
